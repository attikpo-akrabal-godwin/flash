<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Dashboard</title>

<link href="/static/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
</head>

<body>
<%- include('../message') %>
<br/>
<div class="container">
  <div class="row align-items-start">
    <div class="col">
     <a href="/deconnexion" class="btn btn-light" role="button">Logout </a>
    </div>
    <div class="col">
      catalogue de produits
    </div>
    <div class="col">
      <a href="/addProduct" class="btn btn-primary" role="button">Ajouter un produit</a>
     
    </div>
    <table class="table ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Photo</th>
      <th scope="col">Nom</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% productTab.forEach(product => {  %> 
        <tr>
          <th scope="row"><%= product.id %> </th>
          <td><img src="data:image/png;base64,<%= product.photo  %> " class="img-thumbnail" alt="..." width="72" height="57"></td>
          <td><%= product.name  %> </td>
          <td>  <a href="#" class="btn btn-success" onclick="copy('<%= product.token %>' )" role="button">partager (Lien) <i class="bi bi-clipboard-check"></i></a></td>
          <td>  <a href="/showClients/<%= product.token %> " class="btn btn-dark" role="button">Liste des clients</i></a></td>
          <td>  <a href="#" class="btn btn-primary"  role="button"> CSV <i class="bi bi-download"></i></a></td>      
          <td>  <a href="/delete/<%=product.id %>" id=""  class="btn btn-danger cool" role="button">
            supprimer <i class="bi bi-trash3"></i>
          </a></td>
        </tr>
    <% }); %> 
  </tbody>
</table>
  </div>
</div>
<%- include('../js') %>
</body>
</html>